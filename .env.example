# HAG Python Environment Variables
# Copy this file to .env and set your values

# Home Assistant Configuration
HASS_TOKEN=your_long_lived_access_token_here
HASS_WS_URL=ws://homeassistant.local:8123/api/websocket
HASS_REST_URL=http://homeassistant.local:8123

# OpenAI Configuration (for LangChain)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: HAG Configuration
HAG_CONFIG_FILE=config/hvac_config.yaml
HAG_LLM_MODEL=gpt-3.5-turbo
HAG_LLM_TEMPERATURE=0.1

# Optional: Logging
LOG_LEVEL=info